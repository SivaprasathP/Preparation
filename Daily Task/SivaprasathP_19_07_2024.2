package zoho;
import java.util.*;
public class Domain {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		String email=sc.next();
		
		if(validate(email)) {
			System.out.println("Your email is correct");
		}else {
			System.out.println("Your email is not correct");
		}
	}
	
	static boolean validate(String e) {
		int firstIndex=e.indexOf("@");
		int lastIndex=e.lastIndexOf("@");
		
		if(firstIndex!=lastIndex || firstIndex==-1) {
			return false;
			//there should be only one @ character in a email
		}
		
		int comIndex=e.indexOf(".com");
		if(!(comIndex>firstIndex+1)) {
			return false;
			//.com must be after the 2 character only
		}
		return true;
	}

}



